{% extends 'basefront.html.twig' %}

{% block title %}
    Comptes
{% endblock %}

{% block bodysection %}
    <div class="profile-header">
        <img src="{{asset('assets/img/taswira.jpg')}}" alt="Photo de profil">
          <h1>Jack Jacky</h1>
    </div>

    <div class="profile-body">
        <h2>Diplômes et Éducation</h2>

        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <i class="fas fa-graduation-cap"></i>
                        {{ compte.diplome }}
                    </td>
                    <td>
                        {{ compte.datediplome ? compte.datediplome|date('Y-m-d') : '' }}
                    </td>
                </tr>
            </tbody>
        </table>

        <h2>Expérience Professionnelle</h2>

        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <i class="fas fa-briefcase"></i>
                        {{ compte.poste }}
                    </td>
                    <td>
                        {{ compte.experience }}
                    </td>
                </tr>
            </tbody>
        </table>

        <h2>Compétences et Expertises</h2>

        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <i class="fas fa-check-circle"></i>
                        {{ compte.domaine }}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="profile-actions">
            <a href="{{ path('app_comptes_edit', {'idcompte': compte.idcompte}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i>
                Modifier le profil
            </a>
            {{ include('comptes/_delete_form.html.twig') }}
        </div>
    </div>

    <style>
        /* Styles pour l'en-tête du profil */
        .profile-header {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            margin-bottom: 2em;
        }

        .profile-header img {
            width: 10em;
            height: 10em;
            border-radius: 50%;
            margin-bottom: 1em;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .profile-header h1 {
            font-size: 2em;
            font-weight: bold;
            text-align: center;
            margin: 0;
        }

        /* Styles pour le corps du profil */
        .profile-body {
            font-family: 'Open Sans', sans-serif;
            padding: 2em;
            background-color: #f2f2f2;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
        }
    </style>
{% endblock %}
