{% extends 'baseback.html.twig' %}

{% block title %}Liste secteurs{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container">

		<div class="row">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Secteur</th>
					</tr>
				</thead>
				<tbody>
					{% for s in secteurs %}
						<tr>
							<td>{{s.description}}</td>

							<td>
								<a class="btn btn-danger" href="{{path('deleteSecteurs',{'id':s.idSecteur})}}">Delete</a>
							</td>
							<td>
								<a class="btn btn-primary" href="{{path('updateSecteurs',{'id':s.idSecteur})}}">Update</a>
							</td>


						</tr>
						{%endfor%}</tbody>
				</tbody>
			</table>
		</div>
    <div class="row">
			<div class="col-md-4">
				<a class="btn btn-primary" href="{{path('addSecteurs')}}">Add new secteur</a>

			</div>
		</div>
	</div>
{% endblock %}
