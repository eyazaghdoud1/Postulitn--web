{% extends 'baseback.html.twig' %}

{% block content %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="container px-5 my-5 px-5 " style="min-height: 70% !important;">

		<h1>
			Secteurs
		</h1>
		<a class="btn btn-primary mb-3" href="{{path('addSecteurs')}}">Ajouter un secteur</a>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Secteurs</th>
				</tr>
			</thead>
			<tbody>
				{% for s in secteurs %}
					<tr>
						<td>{{s.description}}</td>

						<td>
							<a class="btn btn-danger" href="{{path('deleteSecteurs',{'id':s.idSecteur})}}">Supprimer</a>
						</td>
						<td>
							<a class="btn btn-primary" href="{{path('updateSecteurs',{'id':s.idSecteur})}}">Modifier</a>
						</td>


					</tr>
					{%endfor%}</tbody>
			</tbody>
		</table>


	</div>
{% endblock %}
