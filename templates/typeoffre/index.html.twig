{% extends 'baseback.html.twig' %}


                {%  block content%}
<h1>
	Les types d'offre d'offres
</h1>
<a class="btn btn-primary mb-3"  href="{{path('app_typeoffre_new')}}">Ajouter un type</a> 

   <table class="table">
    <thead>
        <tr>
            <th>Idtype</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for typeoffre in typeoffres %}
        <tr>
            <td>{{ typeoffre.idtype }}</td>
            <td>{{ typeoffre.description }}</td>
            <td>
                <button class="btn btn-primary btn-sm" onclick="window.location='{{ path('app_typeoffre_show', {'idtype': typeoffre.idtype}) }}'">Voir</button>
<button class="btn btn-primary btn-sm" onclick="window.location='{{ path('app_typeoffre_edit', {'idtype': typeoffre.idtype}) }}'">Modifier</button>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">Aucun enregistrement trouv√©</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
