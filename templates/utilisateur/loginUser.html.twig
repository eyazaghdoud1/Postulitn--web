<!doctype html>
<html lang="en">
	<head>

		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

		<link rel="stylesheet" href="css/login.css">

		<title>
			{% block title %}
				Postuli.tn
			{% endblock %}
		</title>
	</head>
	<body>
		<section style="margin-top:50px;">
			<div class="container">

				<div class="row justify-content-center">
					<div class="col-md-12 col-lg-10">
						<div class="wrap d-md-flex">


							<div class="img" style="background-image: url(assets/img/bleu.png);">
								<img class="logocss" src="assets/img/logowhite.png">
							</div>

							<div class="login-wrap p-4 p-md-5">
								<div class="d-flex">
									<div class="w-100">
										<h3 class="mb-4">BIENVENUE !</h3>
										<h6 class="mb-4">Veuillez vous connecter</h6>

									</div>

								</div>


								{{form_start (form,{'attr': {'novalidate': 'novalidate'}}
								)}}
								<p style="color:red;">{{error}}</p>
								<label class="fw-bolder">
									{{ form_label (form.email, 'Email')  }}
								</label>
								{{ form_widget (form.email, {'attr': {'class': "form-control mb-3"}})  }}
								<p class="lead mb-0 invalid-form-field">{{ form_errors (form.email)  }}</p>
								<label class="fw-bolder">
									{{ form_label (form.mdp, 'Mot de passe')  }}
								</label>
								{{ form_widget (form.mdp, {'attr': {'class': "form-control mb-3"}})  }}
								<p class="lead mb-0 invalid-form-field">{{ form_errors (form.mdp)  }}</p>
								<button class="form-control btn btn-primary rounded submit px-3>
									{{ form_widget (form.save) }}
									
																																			{{form_end (form)}}
									
									
																																			<div class=" form-group d-md-flex">

									<div class="w-50 text-md-right" style="margin-top:20px;">
										<a href="{{path('sendmail')}}">Mot de passe oubli√© ?</a>
									</div>
								</div>
							</form>
							<p class="text-center">Not a member?
								<a data-toggle="tab" href="{{ path('signup') }}">Sign Up</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</body>
	</body>
</html></div></body></html></section></body></body></html>
