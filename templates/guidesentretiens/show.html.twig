{% extends 'baseback.html.twig' %}

{% block title %}Guidesentretiens
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div>
					<div class="card-header text-dark">
						<h1 class="text-center">Guide d'entretien</h1>
					</div>
                    
							<table class="table table-striped">
								<tbody>
									<tr>
										<th>Domaine</th>
										<th>Spécialité</th>
										<th>Note</th>
										<th>Nombre de notes</th>


									</tr>
									<tr>

										<td>{{ guidesentretien.domaine }}</td>
										<td>{{ guidesentretien.specialite }}</td>

										<td>{{ guidesentretien.note|number_format(1) }}</td>
										<td>{{ guidesentretien.nombrenotes }}</td>
									</tr>


								</tbody>
							</table>
					<div
						class="card-body">
						{#
						                     {% for message in app.flashes('success') %}
						                            <div class="alert alert-success">{{ message }}</div>
						                        {% endfor %}
						                        #}
						<div class="row">
							<div class="col-md-4 text-center"></div>

							<div class="col-md-4 text-center">

								<form method="post" action="{{ path('app_guidesentretiens_set_note', {'idguide': guidesentretien.idguide}) }}">
									<div class="form-group"></form>

								</div>
							</div>
						</div>

						<div class="my-3" style="margin-top:-10px !important;">
							<iframe width="700" height="438" src="https://www.youtube.com/embed/AYtAhi-YE9U" title="Entretien d'embauche: bien se présenter en 2 minutes (exemple)" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
						</div>
                        <hr>
						<div class="text-right" style="display:flex !important;">
                        {{ include('guidesentretiens/_delete_form.html.twig') }}
							<a href="{{ path('app_guidesentretiens_edit', {'idguide': guidesentretien.idguide}) }}" class="btn btn-primary" style="margin-right:10px !important;">Modifier</a>
							
							<a href="{{ path('app_guidesentretiens_index') }}" class="btn btn-primary">Retour à la liste</a>
						</div>
					</div>
				</div>
                </div>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
