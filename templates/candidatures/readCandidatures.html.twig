<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div class="container">
	<div class="row">
		<div class="col-md-4"></div>
	</div>
	<div class="row">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Nom et prénom</th>

					<th>Candidature</th>
					<th>Date de candidature</th>
					<th>Etat</th>
					{#<th>Valider</th>#}
					
				</tr>
			</thead>
			<tbody>
				{%for l in list %}
					<tr>

						<td>{{l.idcandidat.prenom ~ ' ' ~ l.idcandidat.nom}}</td>
						<td>
							<a class="btn" style="background-color:#353D62 !important; color: white !important;" href="{{path('detailsCandidatureRecruteur', {'id': l.id})}}">Détails</a>
						</td>
						<td>{{l.date|date('d-m-Y')}}</td>
						{% if l.etat|lower == "refusée"%}
						<td><div class="badge" style="background-color:red !important;">{{l.etat}}</div></td>
						{% elseif l.etat|lower == "acceptée" %}
						<td><div class="badge" style="background-color:green !important;">{{l.etat}}</div></td>
						{% else %}
						<td><div class="badge" style="background-color:#0E1947 !important;">{{l.etat}}</div></td>
						{% endif %}
						{#<td>
							<a class="btn btn-primary" href="{{path('validerCandidature',{'id': l.id})}}">Valider</a>
						</td>#}
						
						


					</tr>
					{%endfor%}</tbody>
			</tbody>
		</table>
	</div>
</div>
