{% extends 'basefront.html.twig' %}

{% block bodysection %}
	<link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
	<link
	href="{{asset('css/commentaire.css')}}" rel="stylesheet"/>


	<!-- Logoicon-->
	<link
	rel="icon" type="image/x-icon" href="{{asset('assets/logo.ico')}}"/>
	<!-- Bootstrap icons-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet"/>
	<div style="margin-top: -100px !important;">

		<div class="row">
			<div class="col-md-6 mx-auto">
				<div class="my-5">

					<div class="card-body" style="width:80% !important;">
						<div class="single-job-items mb-50" style="margin-top: -50 px !important; color: black !important;">
							<div class="job-items" style="margin-top: -50 px !important; color: black !important;">

								<div class="job-tittle" style="margin-top: -50 px !important; color: black !important;">
									<h2 class="text-center">{{ offre.poste }}</h2>
									<ul style="color: black !important; display: flex !important; flex-direction:column; align-items:flex-start;">
										<li style="color: black !important;">
											<strong>Lieu:
											</strong>
											{{ offre.lieu }}</li>
										<li style="color: black !important;">
											<strong>Entreprise:
											</strong>
											{{ offre.entreprise }}</li>
										<li style="color: black !important;">
											<strong>Type Offre:
											</strong>
											{{ offre.typeDescription }}</li>
										<li style="color: black !important;">
											<strong>Spécialité:
											</strong>
											{{ offre.specialite }}</li>
										<li style="color: black !important;">
											<strong>Date d'expiration:
											</strong>
											{{ offre.dateexpiration|date('Y-m-d') }}</li>
									</div>


								</div>


							</div>
						</div>
						<div class="job-post-details">
							<div
								class="post-details1 mb-50" style="margin-top:20px !important;">
								<!-- Small Section Tittle -->
								<div class="small-section-tittle">
									<hr style="height: 2px !important; background-color:black !important; margin-top: -50px !important;">

									<h4 style="margin-left:-250px !important;">Description de l'offre</h4>

									<p>
										{{offre.description}}
									</p>
								</div>
								<div class="card-footer text-right">
                                <div>
									<a href="{{ path('addCandidature', {'idoffre':offre.idoffre}) }}" class="btn1 btn-primary btn-sm shadow-none">Postuler</a>
                                    </div>

									{#<div style="display:flex !important;">
										<a href="{{ path('app_offre1') }}" class="btn btn-secondary btn-sm ml-2">Retour</a>
									</div>#}
								</div>

							</div>

						</div>

					</div>
				</div>
				<div class="col-md-6 mx-auto" style="margin-top:90px !important; border-color:black !important;">

					<h3 style="font-weight:bold;">Suggestions</h3>

                    <p class="lead mb-0" style="font-size:18px">Offres qui peuvent vous intéresser</p>


					
						{% for suggestions in similarOffers|batch(2) %}
                        <div style="margin-left: 30px !important;">
							<div class="row my-5 ">
								{% for o in suggestions %}
									<div class=" mb-4" style="width:50%;">
										<div class="card h-100">
											<div class="card-body">
												<h5 class="card-title">{{ o.poste }}</h5>
												<p class="card-text">{{ o.description }}</p>
												<div class="d-flex justify-content-between align-items-center">
													<p class="card-text">{{ o.lieu }}</p>
													<div class="btn-group">
														<a href="{{ path('app_offre_show1', {'id': o.idOffre}) }}" class="btn btn-sm btn-outline-secondary">Details</a>
													</div>
												</div>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				</div>

			</div>
		</div>
	</div>

{% endblock %}
