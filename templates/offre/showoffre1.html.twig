{% extends 'basefront.html.twig' %}

{% block bodysection %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto" style="margin-top:90px">
                <div class="card my-5">
                    <div class="card-header">
                        <h2 class="text-center">{{ offre.poste }}</h2>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ offre.description }}</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Lieu: </strong>{{ offre.lieu }}</li>
                            <li class="list-group-item"><strong>Entreprise: </strong>{{ offre.entreprise }}</li>
                            <li class="list-group-item"><strong>Type Offre: </strong>{{ offre.typeDescription }}</li>
                            <li class="list-group-item"><strong>Spécialité: </strong>{{ offre.specialite }}</li>
                            <li class="list-group-item"><strong>Date d'expiration: </strong>{{ offre.dateexpiration|date('Y-m-d') }}</li>
                        </ul>
                    </div>
                    <div class="card-footer text-right">
                        <a href="{{ path('addCandidature', {'idoffre':offre.idoffre}) }}" class="btn btn-primary btn-sm">Postuler</a>
                        <a href="{{ path('app_offre') }}" class="btn btn-secondary btn-sm ml-2">Retour</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mx-auto"> 
            <h2>Suggestions</h2>
           {% for suggestions in similarOffers|batch(2) %}
           <div class="">
                    <div class="row my-5 ">
                        {% for o in suggestions %}
                            <div class=" mb-4" style="width:50%">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ o.poste }}</h5>
                                        <p class="card-text">{{ o.description }}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <p class="card-text">{{ o.lieu }}</p>
                                            <div class="btn-group">
                                                <a href="{{ path('app_offre_show1', {'id': o.idOffre}) }}" class="btn btn-sm btn-outline-secondary">Details</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    </div>
                {% endfor %}
            </div>
          
        </div>
    </div>
{% endblock %}
