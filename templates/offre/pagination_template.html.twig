{% if pageCount > 1 %}
    <ul class="pagination">
        {% if current == 1 %}
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({'page': current - 1})) }}">Previous</a></li>
        {% endif %}
        {% for page in pagesInRange %}
            {% if page == current %}
                <li class="page-item active"><a class="page-link" href="#">{{ page }}</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({'page': page})) }}">{{ page }}</a></li>
            {% endif %}
        {% endfor %}
        {% if current == pageCount %}
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
        {% else %}
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({'page': current + 1})) }}">Next</a></li>
        {% endif %}
    </ul>
{% endif %}
