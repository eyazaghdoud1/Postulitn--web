{% extends 'basefront.html.twig' %}

{% block title %}{% endblock %}

{% block bodysection %}

<link rel="stylesheet" href="{{ asset('css/form.css') }}">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Créer une offre</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.poste) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.lieu) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.entreprise) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.specialite) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateexpiration) }}
                    </div>

                    <div class="form-group">
                        {{ form_rest(form) }}
                        <button type="submit" class="btn btn-primary">Créer l'offre</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}