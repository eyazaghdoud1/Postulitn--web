{% extends 'basefront.html.twig' %}
{% block bodysection %}


	<link rel="manifest" href="site.webmanifest">
	<link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
	<link href="{{asset('css/commentaires.css')}}" rel="stylesheet"/>

	<style>
		.rating li {
			display: inline-block;
			width: 20px;
		}
		

	</style>


	<div class="media g-mb-30 media-comment">
		<div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
		<h1> Commentaires </h1>
			{% for c in commentaires %}
				<div class="single-job-items mb-30">
					<h5 class="h5 g-color-gray-dark-v1 mb-0">{{c.idUser.prenom}}
						{{c.idUser.nom}}</h5>
					<p>{{c.Contenu}}</p>
					<ul class="list-inline d-sm-flex my-0">
						<li class="list-inline-item g-mr-20">
							<a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
								<i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
								178
							</a>
						</li>
						<li class="list-inline-item g-mr-20">
							<a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
								<i class="fa fa-thumbs-down g-pos-rel g-top-1 g-mr-3"></i>
								34
							</a>
						</li>
					</ul>
				</div>
			{% endfor %}
		</div>

	</div>

	<div class="bg-light p-2">
		<div class="container my-5 py-5 text-dark">
			<div class="row d-flex justify-content-center">
				<div class="col-md-5 col-lg-8 col-xl-8">


					<div class="d-flex flex-start w-100">
						<div class="w-100">
							<h5>Ajouter un commentaire</h5>


						</div>
					</div>
					{% block body %}
						{{ form_start(form) }}
						{{ form_row(form.contenu, { 'attr': {'class': 'form-control', 'id': 'textAreaExample', 'rows': '4', 'style': 'width: 100%; height: 200px; margin-bottom: 20px;'} }) }}
						<div>
							{{ form_widget(form.save, {'label': 'Commenter', 'attr': {'class': 'btn1 '}}) }}
						</div>
						{{ form_end(form)}}
					{% endblock %}
				</div>
			</div>
			{% for type, messages in app.session.flashbag.all() %}
			{% for message in messages %}
				<div class="alert alert-{{ type }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
		</div>
</div>

		

	{% endblock %}
