{% extends 'basefrontCandidat.html.twig' %}
{% block title %}Project details
{% endblock %}
{% block content %}
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">

		<meta name="description" content="">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="manifest" href="site.webmanifest">
		<link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.ico">
		<link href="{{asset('assets/assetsListing/css/style.css')}}" rel="stylesheet"/>
		<link rel="stylesheet" href="assets/assetsListing/css/bootstrap.min.css">
		<link rel="stylesheet" href="assets/assetsListing/css/css/owl.carousel.min.css">
		<link rel="stylesheet" href="assets/assetsListing/css/price_rangs.css">
		<link rel="stylesheet" href="assets/assetsListing/css/flaticon.css">
		<link rel="stylesheet" href="assets/assetsListing/css/slicknav.css">
		<link rel="stylesheet" href="assets/assetsListing/css/animate.min.css">
		<link rel="stylesheet" href="assets/assetsListing/css/magnific-popup.css">
		<link rel="stylesheet" href="assets/assetsListing/css/fontawesome-all.min.css">
		<link rel="stylesheet" href="assets/assetsListing/css/themify-icons.css">
		<link rel="stylesheet" href="assets/assetsListing/css/slick.css">
		<link rel="stylesheet" href="assets/assetsListing/css/nice-select.css">
		<link
		rel="stylesheet" href="css/style.css">
		<!-- Logoicon-->
		<link
		rel="icon" type="image/x-icon" href="{{asset('assets/logo.ico')}}"/>
		<!-- Bootstrap icons-->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet"/>
	<!-- Core theme CSS (includes Bootstrap)-->

	</head>

	<main>
		<!-- job post company Start -->
		<div class="job-post-company pt-50 pb-120">
			<div class="container">
				<div
					class="row justify-content-between">
					<!-- Left Content -->
					<div
						class="col-xl-7 col-lg-8">
						<!-- job single -->
						<div class="single-job-items mb-50">
							<div class="job-items">
								<div class="company-img company-img-details">
									<a href="#"><img src="assets/img/icon/job-list1.png" alt=""></a>
								</div>
								<div class="job-tittle">
									<a href="#">
										<h4>{{p.nom}}</h4>
									</a>
									<ul>
										<li>{{p.theme}}</li>
										<li>
											<i class="fas fa-clock"></i>
											{{p.duree}}
											Mois</li>
										<li>{{p.idsecteur.description}}</li>
									</ul>
								</div>
							</div>
						</div>
						<!-- job single End -->

						<div class="job-post-details">
							<div
								class="post-details1 mb-50">
								<!-- Small Section Tittle -->
								<div class="small-section-tittle" style="position:relative; left:60px;">
									<h4>Description du projet</h4>

									<p>
										{{p.description}}
									</p>
								</div>
							</div>
						</div>
						<div class="d-flex justify-content-center">
							<a class="btn btn-primary btn-sm shadow-none" href="{{ path('app_commentairesP', {'idProjet': p.idProjet}) }}">voir commentaires</a>
						</div>


					</div>
					<!-- Right Content -->
					<div class="col-xl-4 col-lg-4">
						<div
							class="post-details3  mb-50">
							<!-- Small Section Tittle -->
							<div class="small-section-tittle">
								<h4>Détails du poste</h4>
							</div>
							<ul>
								<li>Date debut :
									<span>{{p.datedebut | date('d-m-Y')}}</span>
								</li>
								<li>Date de fin :
									<span>{{p.datefin | date('d-m-Y')}}</span>
								</li>
								<li>Durée :
									<span>{{p.duree}}
										Mois</span>
								</li>
								<li>Théme :
									<span>{{p.theme}}</span>
								</li>
								<li>Secteur :
									<span>{{p.idsecteur.description}}</span>
								</li>
							</ul>
							<div
								class="apply-btn2">
								<!--<a href="#" class="btn">Apply Now</a>-->
								<div class="d-flex justify-content-center">
									<button class="btn btn-primary btn-sm shadow-none" type="button">Postuler</button>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>

			<!-- job post company End -->


		{% endblock %}
