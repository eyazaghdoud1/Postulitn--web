{% extends "basefront.html.twig" %}
{% block css %}
<link href="{{asset('css/style.css')}}" rel="stylesheet" />
<link href="{{asset('css/quizlist.css')}}" rel="stylesheet" />

<style>
.cont {
  backdrop-filter: blur(16px) saturate(180%);
  background-color:#D9D9D9;
  border-radius: 12px;
  color:#0E1947;
  border: 1px solid rgba(255, 255, 255, 0.125);  
  padding: 20px;  
  margin-top:-50px;
  filter: drop-shadow(0 30px 10px rgba(0,0,0,0.125));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  text-align: center;
  
}

.wrapper {
  width: 100%;
  height: 100%;
  
}

.banner-image {
  
  background-position: center;
  background-size: cover;
  margin-bottom: 20px;
  padding: 10px;
  width: 100%;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255, 0.255)
}
.button-wrapper{
  margin-top: 30px;
}

.btn1 {
  border: none;
  padding: 12px 24px;
  border-radius: 24px;
  font-size: 12px;
  font-size: 0.8rem;  
  letter-spacing: 2px;  
  cursor: pointer;
 
}
.fill {
  background: #1E9DFF;
  color: rgba(255,255,255,0.95);
  filter: drop-shadow(0);
  font-weight: bold;
  transition: all .3s ease; 
}
.btn1:hover{
  transform: scale(1.125);  
  border-color: rgba(255, 255, 255, 0.9);
  filter: drop-shadow(0 10px 5px rgba(0,0,0,0.125));
  transition: all .3s ease;    
}

.ar {
    text-decoration: none;
   
}
</style>
{% endblock %}
{% block bodysection %}
<div class="cont">
<div class="wrapper">
<div class="banner-image"> 
<h2 class="fw-bolder">Quiz: {{quiz.nom}}   </h2>
<p class="lead mb-0">Spécialité: {{quiz.specialite}} </p>
<img src={{asset('assets/img/logo1.png')}}></div>

<h4 class="fw-bolder"> Votre score est: {{score}} /5</h4>
{% if verif == 'old' %}
<h6 class="lead mb-0">Date du dernier essai:  {{ "now"|date("m/d/Y") }} </h6>
<p >Veuillez attendre un mois avant de repasser le quiz.  {{ "now"|date("m/d/Y") }} </p>
{% else %}
<h6 class="lead mb-0">Date:  {{ "now"|date("m/d/Y") }} </h6>
{% endif %}
<div class="button-wrapper"> 
<button class="btn1 fill"><a class="ar"   style="color: white;" href='{{path('candidatReadQuiz')}}'>Passer un autre quiz?</a></button>
<button class="btn1"><a class="ar" href='{{path('quizReponses', {'id': quiz.id})}}'>Voir les réponses du quiz</a></button>
</div>

</div>
</div>
{% endblock %}